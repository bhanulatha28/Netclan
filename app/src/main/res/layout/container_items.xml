<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">



    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:elevation="9dp"
        android:padding="10dp"
        android:layout_marginTop="8dp"
        android:id="@+id/cxscreen"
        android:orientation="vertical"
        android:weightSum="2"
        app:layout_constraintTop_toBottomOf="@id/imageViewHolder"
        app:layout_constraintBottom_toBottomOf="@id/container"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginStart="65dp"
            android:text="friendship | hangout | coffe"
            android:textColor="#003366"
            android:textSize="16sp"
            android:textStyle="bold" />
        <TextView
            android:layout_width="wrap_content"
            android:text="Hi iam open to new connection"
            android:textColor="#003366"

            android:layout_marginTop="5dp"
            android:layout_marginStart="65dp"
            android:textSize="16sp"
            android:layout_height="wrap_content"/>


    </androidx.appcompat.widget.LinearLayoutCompat>
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:elevation="9dp"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        android:weightSum="3"
        app:layout_constraintEnd_toEndOf="@id/container"
        app:layout_constraintBottom_toBottomOf="@id/imageViewHolder"
        app:layout_constraintTop_toTopOf="@id/imageViewHolder"
        app:layout_constraintStart_toEndOf="@id/imageViewHolder"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_weight="1"
            android:text="Michael Murphy "
            android:textColor="#003366"
            android:textSize="16sp"
            android:textStyle="bold" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_marginStart="20dp"
            android:text="Andhra pradesh 1Km"
            android:textColor="#003366"
            android:layout_weight="1"

            android:textSize="16sp"
            android:layout_height="wrap_content"/>
        <com.google.android.material.progressindicator.LinearProgressIndicator
            android:layout_width="150dp"
            android:layout_marginStart="20dp"
            android:layout_height="10dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:indeterminateTint="#003366"
            app:indicatorColor="@color/blue"
            android:progress="60"
            />



    </androidx.appcompat.widget.LinearLayoutCompat>
    <androidx.cardview.widget.CardView
        android:id="@+id/container"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:elevation="20dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="35dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >
        <TextView
            android:id="@+id/invite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+INVITE"
            android:textColor="#003366"
            android:textStyle="bold"
            android:textSize="17sp"
            android:layout_gravity="end"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="18dp"
            />
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/imageViewHolder"
        android:layout_width="90dp"
        app:cardCornerRadius="10dp"
        android:elevation="9dp"
        android:layout_marginStart="12dp"
        android:layout_height="90dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >
        <androidx.appcompat.widget.AppCompatImageView
            android:src="@drawable/image_one"
            android:background="#3F51B5"
            android:scaleType="fitXY"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>



